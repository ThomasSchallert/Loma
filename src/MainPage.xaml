<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LomaPro.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Text="Left" HorizontalOptions="Start" VerticalOptions="Center" CornerRadius="50" Grid.Column="0" Grid.RowSpan="2" />
        <Button Text="Right" HorizontalOptions="End" VerticalOptions="Center" CornerRadius="50" Grid.Column="1" Grid.RowSpan="2" />

        <Button Text="Gallery" HorizontalOptions="Center" VerticalOptions="End" CornerRadius="50" Grid.ColumnSpan="2" Grid.Row="2" Clicked="OnGalleryClicked" />
    </Grid>

</ContentPage>

