<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LomaPro.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <StyleSheet Source="Resources/Styles/styles.css" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout x:Name="ImageStackPanel" Orientation="Horizontal" StyleClass="imageStack" HorizontalOptions="CenterAndExpand" Grid.ColumnSpan="2" Margin="10">
        </StackLayout>
        <Button x:Name="ButtonLeft" Text="&lt;" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center" Grid.Column="0" Grid.RowSpan="2" Clicked="OnLeftButtonClicked" Margin="10"/>
        <Button x:Name="ButtonLRight" Text="&gt;" FontAttributes="Bold" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1" Grid.RowSpan="2" Clicked="OnRightButtonClicked" Margin="10"/>
        
        <Button Text="+" HorizontalOptions="Center" VerticalOptions="Center" Grid.ColumnSpan="2" Grid.Row="2" Clicked="AddHolidayButtonClicked" />
        <Button Text="Gallery" HorizontalOptions="Center" VerticalOptions="Center" Grid.ColumnSpan="2" Grid.Row="3" Clicked="OnGalleryClicked" />
    </Grid>

</ContentPage>

