<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LomaPro.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <CarouselView ItemsLayout="HorizontalList">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>dotnet_bot.png</x:String>
                    <x:String>testbild_strand.jpeg</x:String>
                    <!-- Add more images as needed. -->
                </x:Array>
            </CarouselView.ItemsSource>

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Aspect="AspectFit">
                        <Image.Source>
                            <Binding Path="." />
                        </Image.Source>
                    </Image>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <Button Text="Left" HorizontalOptions="Start" VerticalOptions="Center" CornerRadius="50" Grid.Column="0" Grid.RowSpan="2" />
        <Button Text="Right" HorizontalOptions="End" VerticalOptions="Center" CornerRadius="50" Grid.Column="1" Grid.RowSpan="2" />
        <Button Text="+" HorizontalOptions="Center" VerticalOptions="Center" CornerRadius="50" Grid.ColumnSpan="2" Grid.Row="2" Clicked="AddHolidayButtonClicked" />
        <Button Text="Gallery" HorizontalOptions="Center" VerticalOptions="Center" CornerRadius="50" Grid.ColumnSpan="2" Grid.Row="3" Clicked="OnGalleryClicked" />
    </Grid>

</ContentPage>

