<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LomaPro.Gallery"
             BackgroundColor="Black">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView x:Name="galleryScrollView" Grid.Row="0">
        </ScrollView>

        <Button Text="+" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="End" CornerRadius="50" Margin="0,0,0,20" Clicked="Button_Clicked" />
    </Grid>
</ContentPage>
